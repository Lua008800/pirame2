{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint" 
      ],
      // Adicione a linha abaixo se estiver a usar Node.js 16 ou superior (recomendado)
      "runtime": "nodejs18" // Ou nodejs16, nodejs20, etc.
    }
  ],
  "hosting": {
    "public": "public", // Ou o nome da pasta onde est√° o seu index.html
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html" 
      }
    ]
  }
}
